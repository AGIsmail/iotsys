<devices>
  <deviceloaders>
	<device-loader>at.ac.tuwien.auto.iotsys.gateway.connectors.coap.CoapDeviceLoaderImpl
    </device-loader>
  </deviceloaders>
  
  <coap>
       <connector>
            <name>CoapDevices</name>
            <enabled>true</enabled>

			<device>
					<type>at.ac.tuwien.auto.iotsys.gateway.obix.objects.iot.sensors.impl.coap.PushButtonImplCoap
					</type>
					<address>coap://[aaaa::c30c:0:0:527]:5683/button</address>
					<href>button</href>
					<historyEnabled>true</historyEnabled>
					<refreshEnabled>true</refreshEnabled>
					<groupCommEnabled>true</groupCommEnabled>
			</device>

			<device>
					<type>at.ac.tuwien.auto.iotsys.gateway.obix.objects.iot.sensors.impl.coap.ActivitySensorImplCoap
					</type>
					<address>coap://[aaaa::c30c:0:0:527]:5683/acc</address>
					<href>acc</href>
					<historyEnabled>true</historyEnabled>
					<refreshEnabled>true</refreshEnabled>
					<groupCommEnabled>true</groupCommEnabled>
			</device>
			
			<device>
					<type>at.ac.tuwien.auto.iotsys.gateway.obix.objects.iot.actuators.impl.coap.LedsActuatorImplCoap
					</type>
					<address>coap://[aaaa::c30c:0:0:518]:5683/leds</address>
					<href>leds</href>
					<historyEnabled>true</historyEnabled>
					<refreshEnabled>true</refreshEnabled>
					<groupCommEnabled>true</groupCommEnabled>
			</device>

			<device>
					<type>at.ac.tuwien.auto.iotsys.gateway.obix.objects.iot.sensors.impl.coap.TemperatureSensorImplCoap
					</type>
					<address>coap://[aaaa::c30c:0:0:518]:5683/temp</address>
					<href>temp</href>
					<historyEnabled>true</historyEnabled>
					<refreshEnabled>true</refreshEnabled>
					<groupCommEnabled>true</groupCommEnabled>
			</device>
		</connector>

  </coap>
</devices>
