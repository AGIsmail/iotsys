<devices>

  	<deviceloaders>
    	<device-loader>at.ac.tuwien.auto.iotsys.gateway.connectors.coap.CoapDeviceLoaderImpl
    	</device-loader>
    	<device-loader>at.ac.tuwien.auto.iotsys.gateway.connectors.virtual.VirtualDeviceLoaderImpl
    	</device-loader>
  	</deviceloaders>

	<coap>
		<connector>
			<name>CoapDevices</name>
	    	<enabled>true</enabled>
	    
	    	<!-- SENSOREN -->
      		<device>
        		<type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.sensors.impl.SwitchingSensorImpl
        		</type>
				<address>fc00::1</address>
        		<href>Sens1</href>
      		</device>

      		<device>
        		<type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.sensors.impl.IndoorBrightnessSensorImpl
       	 		</type>
        		<address>fc00::2</address>
        		<href>Sens2</href>
        		<historyEnabled>false</historyEnabled>
        		<historyCount>200</historyCount>
      		</device>

      		<device>
        		<type>at.ac.tuwien.auto.iotsys.gateway.obix.objects.iot.sensors.impl.coap.TemperatureSensorImplCoap
        		</type>
				<address>fc00::3</address>
        		<href>Sens3</href>
        		<historyEnabled>true</historyEnabled>
        		<refreshEnabled>true</refreshEnabled>
        		<groupCommEnabled>true</groupCommEnabled>
      		</device>

      		<device>
        		<type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.sensors.impl.PushButtonImpl
        		</type>
				<address>fc00::4</address>
        		<href>Sens4</href>
      		</device>

      		<!-- ACTUATORS -->

      		<device>
        		<type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.LightSwitchActuatorImpl
        		</type>
				<address>fc00::11</address>
        		<href>Act1</href>
        		<historyEnabled>true</historyEnabled>
        		<refreshEnabled>false</refreshEnabled>
        		<groupCommEnabled>true</groupCommEnabled>
      		</device>

      		<device>
        		<type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.FanSpeedActuatorImpl
        		</type>
				<address>fc00::12</address>
        		<href>Act2</href>
        		<historyEnabled>false</historyEnabled>
        		<historyCount>200</historyCount>
      		</device>

    	</connector>
	</coap>
	
	<virtual>
    <connector>
      <name>testDevices</name>
      <enabled>false</enabled>
      
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.sensors.impl.IndoorBrightnessSensorImpl
        </type>
        <address>5/2/0</address>
        <href>brightnessSensor1</href>
        <ipv6>2001:629:2500:570::10d</ipv6>
        <historyEnabled>false</historyEnabled>
      </device>
      
      <!-- ACTUATORS -->
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.SunblindActuatorImpl
        </type>
        <address>null, 5/3/7, 5/3/8</address>
        <href>sunblind1</href>
        <ipv6>2001:629:2500:570::11b</ipv6>
        <historyEnabled>false</historyEnabled>
        <historyCount>200</historyCount>
        <groupCommEnabled>true</groupCommEnabled>
      </device>
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.FanSpeedActuatorImpl
        </type>
        <address>null, 5/3/6</address>
        <href>fanSpeed1</href>
        <historyEnabled>true</historyEnabled>
        <historyCount>20</historyCount>
      </device>
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.FanSpeedActuatorImpl
        </type>
        <address>null, 5/3/7</address>
        <href>fanSpeed2</href>
        <historyEnabled>true</historyEnabled>
        <historyCount>20</historyCount>
      </device>
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.LightSwitchActuatorImpl
        </type>
        <href>switch1</href>
        <historyEnabled>true</historyEnabled>
        <refreshEnabled>false</refreshEnabled>
        <groupCommEnabled>true</groupCommEnabled>
      </device>
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.LightSwitchActuatorImpl
        </type>
        <href>switch2</href>
        <refreshEnabled>false</refreshEnabled>
      </device>
      
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.LightSwitchActuatorImpl
        </type>
        <href>switch3</href>
        <refreshEnabled>false</refreshEnabled>
      </device>
      
       
      <device>
        <type>at.ac.tuwien.auto.iotsys.commons.obix.objects.iot.actuators.impl.LightSwitchActuatorImpl
        </type>
        <href>switch4</href>
        <refreshEnabled>false</refreshEnabled>
        <groupCommEnabled>true</groupCommEnabled>
      </device>
    </connector>
  </virtual>

</devices>
